
extends layout

block content
    h4.text-center.pb-3 Login To Your Account
    form.needs-validation(method="POST", novalidate)
        div.mb-3 
            label.form-label(for="newPassword") Email
            input.form-control(
                type="password",
                id="newPassword",
                name="newPassword",
                placeholder="Enter your new password",
                required
            )
            div.invalid-feedback 
                | Please fill new password field
        div.mb-3 
            label.form-label(for="confirmPassword") Email
            input.form-control(
                type="password",
                id="confirmPassword",
                name="confirmPassword",
                placeholder="Enter your confirmation password",
                required
            )
            div.invalid-feedback 
                | Please fill confirmation password field
        div.text-center 
            button.btn.btn-primary Reset Password