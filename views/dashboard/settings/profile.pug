extends ../layout

block content
    div.c-page
        div.c-page__head
            div
                h1.c-page__title User Profile
                p.c-page__description
                    | Lorem ipsum dolor sit amet consectetur adipisicing elit. Modi reprehenderit molestias cupiditate mollitia officiis in praesentium beatae veniam voluptatibus asperiores libero
        div.c-page__body
            form.needs-validation(novalidate)
                div.mb-3
                    label.form-label(for="image") User Image
                    input.form-control(type="file", id="image", placeholder="User Image", required)
                    div.invalid-feedback
                        | Please fill main image field

                div.mb-3.row
                    div.col-6
                        label.form-label(for="first_name") Firstname
                        input.form-control(type="text", id="first_name", placeholder="Firstname", required)
                        div.invalid-feedback
                            | Please fill first name field

                    div.col-6
                        label.form-label(for="last_name") Lastname
                        input.form-control(type="text", id="last_name", placeholder="Firstname", required)
                        div.invalid-feedback
                            | Please fill last name field

                div.mb-3
                    label.form-label(for="about") About
                    textarea.form-control(id="about", required, rows="3")
                    div.invalid-feedback
                        | Please fill about field

                div.mb-3
                    label.form-label(for="content") Tags
                    select.form-select(multiple, size="5")
                        option(value="1") One
                        option(value="2") Two
                        option(value="3") Three

                button.btn.btn-primary Update Info