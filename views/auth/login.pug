
extends layout

block content
    h4.text-center.pb-3 Login To Your Account
    form.needs-validation(method="POST", novalidate)
        div.mb-3 
            label.form-label(for="email") Email
            input.form-control(type="email", id="email", name="email", placeholder="Enter your email", required)
            div.invalid-feedback 
                | Please fill email field
        div.mb-3 
            label.form-label(for="password") Password
            input.form-control(type="password", id="password", name="password", placeholder="Enter your password", required)
            div.invalid-feedback 
                | Please fill password field
        div.c-auth__link-container 
            a.c-auth__link(href="/auth/reset") Forgot Password
            a.c-auth__link(href="/auth/register") Don't have account? Register Now
        div.text-center 
            button.btn.btn-primary Login